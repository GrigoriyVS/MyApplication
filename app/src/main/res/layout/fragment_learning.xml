<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"/>
    <TextView

            android:text="@string/learning_title"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>