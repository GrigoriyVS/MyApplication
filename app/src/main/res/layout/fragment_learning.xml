<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment">

    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/levelBt1"
            android:scaleType="fitCenter"
            android:background="@drawable/level_1"
            android:soundEffectsEnabled="false"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/levelBt2"
            android:scaleType="fitCenter"
            android:background="@drawable/level_2"
            android:soundEffectsEnabled="false"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            app:layout_constraintTop_toBottomOf="@+id/levelBt1" android:layout_marginTop="60dp"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/levelBt3"
            android:scaleType="fitCenter"
            android:background="@drawable/level_3"
            android:soundEffectsEnabled="false"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            app:layout_constraintTop_toBottomOf="@+id/levelBt2" android:layout_marginTop="60dp"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/levelBt4"
            android:scaleType="fitCenter"
            android:background="@drawable/level_4"
            android:soundEffectsEnabled="false"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            app:layout_constraintTop_toBottomOf="@+id/levelBt3" android:layout_marginTop="60dp"/>
    <TextView
            android:text="@string/learning_title"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"/>
    <TextView
            android:text="@string/LevelName_1"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textLevelBt1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/levelBt1"/>
    <TextView
            android:text="@string/LevelName_2"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textLevelBt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/levelBt2"/>
    <TextView
            android:text="@string/LevelName_3"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textLevelBt2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/levelBt3"/>
    <TextView
            android:text="@string/LevelName_4"
            android:layout_width="408dp"
            android:layout_height="30dp" android:id="@+id/textLevelBt3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/levelBt4"/>
</androidx.constraintlayout.widget.ConstraintLayout>