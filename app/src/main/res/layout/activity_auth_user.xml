<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthUser">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp" android:id="@+id/textView10"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/borders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintStart_toStartOf="parent"
            android:singleLine="false"
            android:layout_marginTop="-15dp" android:layout_marginStart="70dp" android:layout_marginEnd="70dp"/>
    <TextView
            android:text="@string/AuthText"
            android:layout_width="match_parent"
            android:layout_height="32dp" android:id="@+id/AuthText"
            android:fontFamily="casual" android:textSize="20sp"
            android:textColor="@color/black" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/languageBt_Auth"
            android:scaleType="fitCenter"
            android:background="@null"
            android:soundEffectsEnabled="false"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="-5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>